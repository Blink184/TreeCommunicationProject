<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="fill_parent"
    android:layout_width="fill_parent"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#00aa88"
        android:orientation="horizontal"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center">

            <com.joooonho.SelectableRoundedImageView
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:id="@+id/ivRootEmployeeImage"
                android:src="@drawable/person"
                android:scaleType="centerCrop"
                app:sriv_left_top_corner_radius="16dip"
                app:sriv_right_top_corner_radius="0dip"
                app:sriv_left_bottom_corner_radius="48dip"
                app:sriv_right_bottom_corner_radius="16dip"
                app:sriv_border_width="2dip"
                app:sriv_border_color="#000000"
                app:sriv_oval="true" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/tvRootEmployeeName"
                android:layout_width="fill_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:textColor="@color/white"
                android:textStyle="bold"
                android:gravity="left"
                android:textSize="20sp">
            </TextView>
            <TextView
                android:id="@+id/tvRootEmployeeType"
                android:layout_width="fill_parent"
                android:maxLines="2"
                android:layout_height="wrap_content"
                android:textColor="@color/myTextPrimaryColor"
                android:gravity="left"
                android:textSize="16sp">
            </TextView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
            android:gravity="center_vertical"
            android:layout_height="match_parent">
            <ImageButton
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:scaleType="fitXY"
                android:id="@+id/ibBroadcast"
                android:background="#00000000"
                android:layout_gravity="right"
                android:src="@drawable/broadcast"/>
        </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:id="@+id/ll">

    </LinearLayout>
</LinearLayout>